<div style="margin: 10px 0 10px 20%; float: left;">
  <a href="/<%= title %>"><%= title %></a> &gt;
  <%= chapter %>  &gt;
  Page <%= page %> of <%= total_pages %>
</div>

<div style="margin: 10px 20% 10px 0; float: right;">
  <a href="<%= prev_img %>">&lt; Prev</a>
  &nbsp; | &nbsp;
  <a href="<%= next_img %>">Next &gt;</a>
</div>

<div id="img-container">
  <a href="<%= next_img %>"><%= image_tag image %></a>
</div>


<style>

body {
  margin: 0;
  padding: 0;
  background-color: #232323;
  color: #E6E1DC;
  font-size: 16px;
  text-align: center;
  padding: 6px 0 10px;
}

a {
  color: #E6E1DC;
  text-decoration: none;
}

#img-container {
  clear: both;
}

</style>

<script>

document.onkeydown = function(e) {
  var keycode = e.which || e.keyCode;

  if (keycode == 39) {
    window.location = '<%= next_img %>';
  } else if (keycode == 37) {
    window.location = '<%= prev_img %>';
  }
}

</script>
